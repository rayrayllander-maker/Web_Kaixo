<svg width="800" height="600" viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Fondo de parrilla/mesa -->
  <defs>
    <linearGradient id="plateGradient3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#F5F5F5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#DCDCDC;stop-opacity:1" />
    </linearGradient>
    
    <linearGradient id="meatGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B4513;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#A0522D;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#CD853F;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#D2691E;stop-opacity:1" />
    </linearGradient>
    
    <radialGradient id="charGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#2F4F4F;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
    </radialGradient>
  </defs>
  
  <!-- Fondo con textura de parrilla -->
  <rect width="800" height="600" fill="#2F4F4F"/>
  
  <!-- Líneas de parrilla -->
  <rect x="0" y="100" width="800" height="4" fill="#000000" opacity="0.3"/>
  <rect x="0" y="150" width="800" height="4" fill="#000000" opacity="0.3"/>
  <rect x="0" y="200" width="800" height="4" fill="#000000" opacity="0.3"/>
  <rect x="0" y="250" width="800" height="4" fill="#000000" opacity="0.3"/>
  <rect x="0" y="300" width="800" height="4" fill="#000000" opacity="0.3"/>
  <rect x="0" y="350" width="800" height="4" fill="#000000" opacity="0.3"/>
  <rect x="0" y="400" width="800" height="4" fill="#000000" opacity="0.3"/>
  
  <rect x="150" y="0" width="4" height="600" fill="#000000" opacity="0.3"/>
  <rect x="200" y="0" width="4" height="600" fill="#000000" opacity="0.3"/>
  <rect x="250" y="0" width="4" height="600" fill="#000000" opacity="0.3"/>
  <rect x="350" y="0" width="4" height="600" fill="#000000" opacity="0.3"/>
  <rect x="450" y="0" width="4" height="600" fill="#000000" opacity="0.3"/>
  <rect x="550" y="0" width="4" height="600" fill="#000000" opacity="0.3"/>
  <rect x="600" y="0" width="4" height="600" fill="#000000" opacity="0.3"/>
  <rect x="650" y="0" width="4" height="600" fill="#000000" opacity="0.3"/>
  
  <!-- Plato -->
  <ellipse cx="400" cy="300" rx="160" ry="140" fill="url(#plateGradient3)" stroke="#C0C0C0" stroke-width="2"/>
  
  <!-- Txuleta (chuletón) - forma característica con hueso -->
  <path d="M280 250 Q320 230 380 240 Q420 235 460 250 Q480 270 470 310 Q450 340 420 350 Q380 355 340 350 Q300 340 280 310 Q270 280 280 250" 
        fill="url(#meatGradient)"/>
  
  <!-- Hueso del chuletón -->
  <ellipse cx="470" cy="280" rx="25" ry="60" fill="#F5F5DC" stroke="#E0E0E0" stroke-width="1"/>
  <ellipse cx="470" cy="280" rx="15" ry="40" fill="#FFFACD"/>
  
  <!-- Marcas de la parrilla en la carne -->
  <rect x="290" y="270" width="150" height="2" fill="#8B0000" transform="rotate(5 365 271)"/>
  <rect x="300" y="290" width="140" height="2" fill="#8B0000" transform="rotate(-3 370 291)"/>
  <rect x="310" y="310" width="130" height="2" fill="#8B0000" transform="rotate(7 375 311)"/>
  <rect x="320" y="330" width="120" height="2" fill="#8B0000" transform="rotate(-2 380 331)"/>
  
  <!-- Pimientos de Gernika -->
  <ellipse cx="320" cy="220" rx="12" ry="25" fill="#228B22" transform="rotate(15 320 220)"/>
  <ellipse cx="500" cy="360" rx="10" ry="20" fill="#228B22" transform="rotate(-20 500 360)"/>
  <ellipse cx="540" cy="340" rx="8" ry="18" fill="#32CD32" transform="rotate(30 540 340)"/>
  
  <!-- Patatas arrugadas -->
  <circle cx="290" cy="350" r="18" fill="#8B4513"/>
  <circle cx="520" cy="220" r="15" fill="#A0522D"/>
  <circle cx="270" cy="320" r="12" fill="#CD853F"/>
  <circle cx="540" cy="250" r="14" fill="#8B4513"/>
  
  <!-- Detalles de textura en las patatas -->
  <circle cx="290" cy="350" r="10" fill="#654321" opacity="0.3"/>
  <circle cx="520" cy="220" r="8" fill="#654321" opacity="0.3"/>
  <circle cx="270" cy="320" r="6" fill="#654321" opacity="0.3"/>
  <circle cx="540" cy="250" r="7" fill="#654321" opacity="0.3"/>
  
  <!-- Sal gorda esparcida -->
  <circle cx="350" cy="200" r="1" fill="#FFFFFF"/>
  <circle cx="420" cy="190" r="1.5" fill="#FFFFFF"/>
  <circle cx="380" cy="205" r="1" fill="#FFFFFF"/>
  <circle cx="440" cy="200" r="1" fill="#FFFFFF"/>
  <circle cx="360" cy="185" r="1" fill="#FFFFFF"/>
  
  <!-- Vapor/humo de la parrilla -->
  <path d="M300 180 Q310 170 300 160 Q290 150 300 140" stroke="#FFFFFF" stroke-width="1" fill="none" opacity="0.4"/>
  <path d="M450 180 Q460 170 450 160 Q440 150 450 140" stroke="#FFFFFF" stroke-width="1" fill="none" opacity="0.4"/>
  <path d="M380 185 Q390 175 380 165 Q370 155 380 145" stroke="#FFFFFF" stroke-width="1" fill="none" opacity="0.3"/>
  
  <!-- Texto informativo -->
  <text x="400" y="480" font-family="Arial, sans-serif" font-size="20" font-weight="bold" text-anchor="middle" fill="#FFFFFF">
    TXULETA DE BUEY
  </text>
  <text x="400" y="510" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="#CCCCCC">
    Card Image Placeholder - 800x600px
  </text>
</svg>
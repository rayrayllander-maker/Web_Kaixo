<svg width="800" height="600" viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Fondo de mesa de madera -->
  <defs>
    <radialGradient id="plateGradient2" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#F8F8F8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0E0E0;stop-opacity:1" />
    </radialGradient>
    
    <linearGradient id="fishGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFFAFA;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#F0F8FF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E6E6FA;stop-opacity:1" />
    </linearGradient>
    
    <linearGradient id="oilGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#FFD700;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#FFA500;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#FF8C00;stop-opacity:0.8" />
    </linearGradient>
  </defs>
  
  <!-- Fondo de mesa -->
  <rect width="800" height="600" fill="#654321"/>
  
  <!-- Sombra del plato -->
  <ellipse cx="400" cy="320" rx="190" ry="170" fill="#000000" opacity="0.15"/>
  
  <!-- Plato hondo -->
  <ellipse cx="400" cy="300" rx="180" ry="160" fill="url(#plateGradient2)" stroke="#D0D0D0" stroke-width="3"/>
  <ellipse cx="400" cy="300" rx="160" ry="140" fill="#FAFAFA" stroke="#E0E0E0" stroke-width="1"/>
  
  <!-- Aceite de oliva en el plato -->
  <ellipse cx="400" cy="300" rx="140" ry="120" fill="url(#oilGradient)"/>
  
  <!-- Bacalao - forma estilizada -->
  <path d="M320 280 Q380 260 440 280 Q460 300 440 320 Q380 340 320 320 Q300 300 320 280" 
        fill="url(#fishGradient)" stroke="#E0E0E0" stroke-width="1"/>
  
  <!-- Detalles del bacalao - líneas naturales -->
  <path d="M330 285 Q370 275 410 285" stroke="#D3D3D3" stroke-width="1" fill="none"/>
  <path d="M335 300 Q375 290 415 300" stroke="#D3D3D3" stroke-width="1" fill="none"/>
  <path d="M330 315 Q370 305 410 315" stroke="#D3D3D3" stroke-width="1" fill="none"/>
  
  <!-- Dientes de ajo -->
  <ellipse cx="350" cy="250" rx="8" ry="12" fill="#FFFACD" transform="rotate(15 350 250)"/>
  <ellipse cx="450" cy="350" rx="8" ry="12" fill="#FFFACD" transform="rotate(-20 450 350)"/>
  <ellipse cx="460" cy="260" rx="6" ry="10" fill="#FFFACD" transform="rotate(45 460 260)"/>
  
  <!-- Guindillas (pequeños pimientos rojos) -->
  <ellipse cx="370" cy="250" rx="3" ry="8" fill="#DC143C" transform="rotate(30 370 250)"/>
  <ellipse cx="430" cy="350" rx="3" ry="8" fill="#DC143C" transform="rotate(-15 430 350)"/>
  
  <!-- Burbujas del aceite -->
  <circle cx="360" cy="280" r="2" fill="#FFD700" opacity="0.6"/>
  <circle cx="420" cy="320" r="1.5" fill="#FFD700" opacity="0.7"/>
  <circle cx="380" cy="330" r="1" fill="#FFD700" opacity="0.8"/>
  <circle cx="440" cy="280" r="2.5" fill="#FFD700" opacity="0.5"/>
  
  <!-- Reflejo en el aceite -->
  <ellipse cx="380" cy="280" rx="30" ry="20" fill="#FFFFFF" opacity="0.3"/>
  
  <!-- Borde decorativo del plato -->
  <ellipse cx="400" cy="300" rx="175" ry="155" fill="none" stroke="#C0C0C0" stroke-width="1" opacity="0.5"/>
  
  <!-- Texto informativo -->
  <text x="400" y="480" font-family="Arial, sans-serif" font-size="20" font-weight="bold" text-anchor="middle" fill="#654321">
    BACALAO AL PIL PIL
  </text>
  <text x="400" y="510" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="#8B4513">
    Card Image Placeholder - 800x600px
  </text>
</svg>